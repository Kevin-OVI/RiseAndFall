<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>
<HBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="fr.butinfoalt.riseandfall.front.game.orders.OrderAttacksListItemController"
      spacing="20"
      alignment="CENTER_LEFT"
      maxWidth="600"
      style="-fx-padding: 10; -fx-border-color: #ccc; -fx-border-radius: 5; -fx-background-color: white;">
    <Label fx:id="targetPlayerName" style="-fx-font-size: 16;"/>
    <Pane HBox.hgrow="ALWAYS"/>
    <HBox alignment="CENTER_RIGHT" spacing="10">
        <Button text="Modifier" onAction="#onEdit"/>
        <Button text="Supprimer" onAction="#onDelete"/>
    </HBox>
</HBox>
